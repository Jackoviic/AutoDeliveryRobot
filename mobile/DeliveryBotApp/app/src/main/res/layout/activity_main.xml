<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- العنوان -->
        <TextView
            android:id="@+id/titleText"
            android:text="DeliveryBot Control"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Label للـ IP -->
        <TextView
            android:text="Robot IP"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- إدخال الـ IP -->
        <EditText
            android:id="@+id/ipEdit"
            android:text="10.42.0.1"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:hint="10.42.0.1"
            android:inputType="textUri"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- الخط تحت الـ IP -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"/>

        <!-- الأزرار -->
        <Button
            android:id="@+id/btnSave"
            android:text="Save / Connect"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/btn_lavender"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnCamera"
            android:text="Open Camera"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/btn_lavender"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnMap"
            android:text="Open Map"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/btn_lavender"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <!-- Split Orders into Address and Phone -->
        <Button
            android:id="@+id/btnAddress"
            android:text="Address 📍"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/btn_lavender"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnPhone"
            android:text="Phone number 📞"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/btn_lavender"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnChat"
            android:text="Open Chat"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/btn_lavender"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
</ScrollView>
