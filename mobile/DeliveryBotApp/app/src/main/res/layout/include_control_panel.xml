<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlPanel"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- شبكة الاتجاهات -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/btnUp"
            android:text="↑"
            android:background="@drawable/btn_lavender"
            android:textColor="@color/text_primary"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="0" android:layout_column="1"/>

        <Button
            android:id="@+id/btnLeft"
            android:text="←"
            android:background="@drawable/btn_lavender"
            android:textColor="@color/text_primary"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="1" android:layout_column="0"/>

        <Button
            android:id="@+id/btnStop"
            android:text="■"
            android:background="@drawable/btn_lavender"
            android:textColor="@color/text_primary"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="1" android:layout_column="1"/>

        <Button
            android:id="@+id/btnRight"
            android:text="→"
            android:background="@drawable/btn_lavender"
            android:textColor="@color/text_primary"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="1" android:layout_column="2"/>

        <Button
            android:id="@+id/btnDown"
            android:text="↓"
            android:background="@drawable/btn_lavender"
            android:textColor="@color/text_primary"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="2" android:layout_column="1"/>
    </GridLayout>

    <!-- صف السرعة -->
    <LinearLayout
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSpeedPlus"
            android:text="+\nSpeed"
            android:textAllCaps="false"
            android:background="@drawable/btn_lavender"
            android:textColor="@color/text_primary"
            android:layout_width="140dp"
            android:layout_height="64dp" />

        <TextView
            android:id="@+id/speedText"
            android:text="Speed: 0.5"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSpeedMinus"
            android:text="-\nSpeed"
            android:textAllCaps="false"
            android:background="@drawable/btn_lavender"
            android:textColor="@color/text_primary"
            android:layout_width="140dp"
            android:layout_height="64dp" />
    </LinearLayout>
</LinearLayout>
