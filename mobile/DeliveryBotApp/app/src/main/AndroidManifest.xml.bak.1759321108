<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deliverybot">

    <!-- إذن الإنترنت -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="@string/app_name"
        android:theme="@style/Theme.App"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- لانشر على MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- باقي الشاشات (معلنة للتشغيل المباشر) -->
        <activity android:name=".CameraActivity"  android:exported="true"/>
        <activity android:name=".MapActivity"     android:exported="true"/>
        <activity android:name=".ChatActivity"    android:exported="true"/>
        <activity android:name=".OrdersActivity"  android:exported="true"/>

    </application>
</manifest>
